<!--
    Defines the application's dark theme color palette and matching brushes.
    - Uses neutral, premium dark tones (no blue cast) for backgrounds and surfaces.
    - Provides consistent text, border, and accent colors across the UI.
    - Accent colors are a soft emerald green for a fresh, non-intrusive highlight.
    Brushes are created for direct use in XAML bindings and styles.
-->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Neutral, premium dark palette (no blue cast) -->
    <Color x:Key="Color.Background">#121315</Color>
    <!-- app background -->
    <Color x:Key="Color.Surface">#17191C</Color>
    <!-- panels -->
    <Color x:Key="Color.SurfaceAlt">#1D2024</Color>
    <!-- inputs/alt -->
    <Color x:Key="Color.Border">#2B3036</Color>
    <!-- hairline borders -->
    <Color x:Key="Color.Text">#F3F4F6</Color>
    <!-- primary text -->
    <Color x:Key="Color.TextDim">#B9C0CC</Color>
    <!-- secondary text -->
    
    <!-- Semi-transparent overlay surfaces -->
    <SolidColorBrush x:Key="Brush.OverlayPanel" Color="#AA1D2024"/>
    <!-- darker translucent (based on SurfaceAlt) -->
    <SolidColorBrush x:Key="Brush.OverlayBorder" Color="#662B3036"/>
    <!-- semi-transparent border -->

    <!-- Accent switched to a soft emerald (not blue) -->
    <Color x:Key="Color.Accent">#4CC38A</Color>
    <Color x:Key="Color.AccentAlt">#6DD3A5</Color>

    <SolidColorBrush x:Key="Brush.Background" Color="{StaticResource Color.Background}"/>
    <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Surface}"/>
    <SolidColorBrush x:Key="Brush.SurfaceAlt" Color="{StaticResource Color.SurfaceAlt}"/>
    <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border}"/>
    <SolidColorBrush x:Key="Brush.Text" Color="{StaticResource Color.Text}"/>
    <SolidColorBrush x:Key="Brush.TextDim" Color="{StaticResource Color.TextDim}"/>
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent}"/>
    <SolidColorBrush x:Key="Brush.AccentAlt" Color="{StaticResource Color.AccentAlt}"/>
</ResourceDictionary>
