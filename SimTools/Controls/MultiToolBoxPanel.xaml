<UserControl x:Class="SimTools.Controls.MultiToolBoxPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             AllowDrop="True"
             Focusable="True">
    <Border Background="#F0131315" BorderBrush="#28FFFFFF" BorderThickness="1" CornerRadius="14" SnapsToDevicePixels="True">
        <!-- Use DockPanel so the header is always docked to the top and the rest fills -->
        <DockPanel LastChildFill="True">
            <!-- Title / drag / pin - docked to the top -->
            <Border x:Name="DragHandle"
                    Height="36"
                    Background="#201C1F22"
                    CornerRadius="14,14,0,0"
                    Cursor="SizeAll"
                    DockPanel.Dock="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Multi-Tool Box"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   Foreground="#E6FFFFFF"
                                   Opacity="0.95"/>
                        <TextBlock Text="{Binding CurrentToolTitle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="#B0FFFFFF"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                        <ToggleButton x:Name="PinBtn" Width="24" Height="24" ToolTip="Pin (lock position &amp; size)"
                                      Background="#22FFFFFF" BorderBrush="#33FFFFFF" BorderThickness="1" Margin="0,0,6,0">
                            <Path Data="M8,1 L12,5 8,9 4,5z" Stretch="Uniform" Fill="#E6FFFFFF" Margin="4"/>
                        </ToggleButton>
                        <Button x:Name="PrevBtn" Content="◀" Width="26" Height="26" Margin="0,0,6,0"/>
                        <Button x:Name="NextBtn" Content="▶" Width="26" Height="26"/>
                        <Button x:Name="Bind1Btn" Content="Bind 1" Width="58" Height="26" Margin="6,0,0,0"/>
                        <Button x:Name="Bind2Btn" Content="Bind 2" Width="58" Height="26" Margin="6,0,0,0"/>
                        <Button x:Name="CloseBtn" Content="×" Width="26" Height="26" Margin="6,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content area fills the rest -->
            <Border CornerRadius="0,0,14,14" Background="#0C121212">
                <ContentPresenter x:Name="ContentHost" Margin="10"/>
            </Border>
        </DockPanel>
    </Border>
</UserControl>
