<UserControl x:Class="SimTools.Controls.ToolFloatingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border x:Name="Root"
            Background="#F0131315"
            BorderBrush="#28FFFFFF"
            BorderThickness="1"
            CornerRadius="14"
            SnapsToDevicePixels="True">
        <Grid>
            <!-- Title / drag / pin -->
            <Border x:Name="DragHandle"
                    Height="34"
                    Background="#201C1F22"
                    CornerRadius="14,14,0,0"
                    Cursor="SizeAll">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                            <Ellipse Width="2" Height="2" Fill="#66FFFFFF" Margin="0,0,2,0"/>
                            <Ellipse Width="2" Height="2" Fill="#66FFFFFF" Margin="0,0,2,0"/>
                            <Ellipse Width="2" Height="2" Fill="#66FFFFFF"/>
                        </StackPanel>
                        <TextBlock x:Name="TitleText"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   Foreground="#E6FFFFFF"
                                   Opacity="0.95"
                                   Text="{Binding PanelTitle, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                        <ToggleButton x:Name="PinBtn"
                                      Width="22" Height="22"
                                      ToolTip="Pin (lock position &amp; size)"
                                      Background="#22FFFFFF"
                                      BorderBrush="#33FFFFFF"
                                      BorderThickness="1">
                            <Path Data="M8,1 L12,5 8,9 4,5z" Stretch="Uniform" Fill="#E6FFFFFF" Margin="4"/>
                        </ToggleButton>
                        <Button x:Name="MinBtn"
                                Content="—"
                                Width="22" Height="22"
                                FontWeight="Bold"
                                Padding="0"
                                Margin="6,0,0,0"
                                Background="#22FFFFFF"
                                BorderBrush="#33FFFFFF"
                                BorderThickness="1"
                                Foreground="#E6FFFFFF"/>
                        <Button x:Name="CloseBtn"
                                Content="×"
                                Width="22" Height="22"
                                FontWeight="Bold"
                                Padding="0"
                                Margin="6,0,0,0"
                                Background="#22FF4A4A"
                                BorderBrush="#33FF4A4A"
                                BorderThickness="1"
                                Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Border Margin="0,34,0,0" CornerRadius="0,0,14,14" Background="#0C121212">
                <ContentPresenter x:Name="ContentHost" Margin="10"/>
            </Border>

            <!-- Resize thumbs (hidden when pinned) -->
            <Thumb x:Name="ResizeBR" Width="12" Height="12"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Cursor="SizeNWSE" Background="#00FFFFFF"/>
            <Thumb x:Name="ResizeR"  Width="8"  Height="Auto"
                   HorizontalAlignment="Right" VerticalAlignment="Stretch"
                   Cursor="SizeWE"   Background="#00FFFFFF"/>
            <Thumb x:Name="ResizeB"  Width="Auto" Height="8"
                   HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                   Cursor="SizeNS" Background="#00FFFFFF"/>
        </Grid>
    </Border>
</UserControl>
