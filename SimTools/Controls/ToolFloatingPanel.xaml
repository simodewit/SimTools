<UserControl x:Class="SimTools.Controls.ToolFloatingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border x:Name="Root"
            Background="#F0131315"
            BorderBrush="#28FFFFFF"
            BorderThickness="1"
            CornerRadius="14"
            SnapsToDevicePixels="True">
        <Grid>
            <!-- Title bar (drag handle) -->
            <Border x:Name="DragHandle"
                    Height="34"
                    Background="#1AFFFFFF"
                    CornerRadius="14,14,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="TitleText"
                               Margin="12,0,8,0"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="#E6FFFFFF"
                               Text="{Binding PanelTitle, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                        <Button x:Name="MinBtn"
                                Content="—"
                                Width="22" Height="22"
                                FontWeight="Bold"
                                Padding="0"
                                Background="#22FFFFFF"
                                BorderBrush="#33FFFFFF"
                                BorderThickness="1"
                                Foreground="#E6FFFFFF"/>
                        <Button x:Name="CloseBtn"
                                Content="×"
                                Width="22" Height="22"
                                FontWeight="Bold"
                                Padding="0"
                                Margin="6,0,0,0"
                                Background="#22FF4A4A"
                                BorderBrush="#33FF4A4A"
                                BorderThickness="1"
                                Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Border Margin="0,34,0,0" CornerRadius="0,0,14,14" Background="#00121212">
                <ContentPresenter Margin="10"/>
            </Border>

            <!-- Resize thumbs -->
            <Thumb x:Name="ResizeBR" Width="12" Height="12"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Cursor="SizeNWSE" Background="#00FFFFFF"/>
            <Thumb x:Name="ResizeR"  Width="8"  Height="Auto"
                   HorizontalAlignment="Right" VerticalAlignment="Stretch"
                   Cursor="SizeWE"   Background="#00FFFFFF"/>
            <Thumb x:Name="ResizeB"  Width="Auto" Height="8"
                   HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                   Cursor="SizeNS" Background="#00FFFFFF"/>
        </Grid>
    </Border>
</UserControl>
