<Window x:Class="SimTools.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:SimTools.Converters"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#00000000"
        ShowInTaskbar="False"
        Topmost="True"
        Title="Overlay"
        Width="960" Height="540">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:FuncToElementConverter x:Key="FuncToElementConverter"/>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <!-- SIDE MENU (long, narrow) -->
        <Border DockPanel.Dock="{Binding OverlayMenuDock, RelativeSource={RelativeSource AncestorType=Window}}"
                Width="260"
                Background="#AA1E1E1E"
                BorderBrush="#33000000"
                BorderThickness="1"
                Padding="12"
                SnapsToDevicePixels="True">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Text="Overlay tools" FontWeight="Bold" Margin="0,0,0,8"/>

                    <!-- Toggle list -->
                    <ItemsControl ItemsSource="{Binding ToolStates, RelativeSource={RelativeSource AncestorType=Window}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Descriptor.Name resolves by reflection; Descriptor is object -->
                                <CheckBox Content="{Binding Descriptor.Name}"
                                          IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                          Margin="0,2,0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Separator Margin="0,12,0,12"/>

                    <TextBlock Text="Attach menu" FontWeight="SemiBold" Margin="0,0,0,6"/>

                    <UniformGrid Columns="4" Margin="0,0,0,6">
                        <Button Content="Left"
                                Command="{Binding SetMenuDockCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="Left" />
                        <Button Content="Right"
                                Command="{Binding SetMenuDockCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="Right" />
                        <Button Content="Top"
                                Command="{Binding SetMenuDockCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="Top" />
                        <Button Content="Bottom"
                                Command="{Binding SetMenuDockCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="Bottom" />
                    </UniformGrid>

                    <Button Content="Close overlay"
                            Command="{Binding CloseOverlayCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- OVERLAY SURFACE (sample scaffolding; keep or wire to your real elements) -->
        <Grid>
            <Canvas>
                <ItemsControl ItemsSource="{Binding OverlayElements}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#33000000"
                                    CornerRadius="8"
                                    Padding="8"
                                    Canvas.Left="{Binding X}"
                                    Canvas.Top="{Binding Y}">
                                <StackPanel>
                                    <TextBlock Text="Mapping" Foreground="White" Opacity="0.85" FontSize="12"/>
                                    <TextBlock Text="{Binding DataContext.CurrentMapName, RelativeSource={RelativeSource AncestorType=Window}}"
                                               FontSize="20" FontWeight="Bold" Foreground="White"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Tool previews controlled by toggles -->
                <ItemsControl ItemsSource="{Binding ToolStates, RelativeSource={RelativeSource AncestorType=Window}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ContentPresenter Visibility="{Binding IsEnabled, Converter={StaticResource BoolToVisibility}}"
                                              Content="{Binding Descriptor.BuildPreview, Converter={StaticResource FuncToElementConverter}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>
        </Grid>
    </DockPanel>
</Window>
