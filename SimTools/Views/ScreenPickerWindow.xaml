<Window x:Class="SimTools.Views.ScreenPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose a screen"
        Width="540" Height="380"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner">

    <!-- Fully opaque rounded card so nothing square shows behind -->
    <Border CornerRadius="12"
            BorderBrush="#26FFFFFF"
            BorderThickness="1"
            Background="#FF101214"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="46"/>
                <RowDefinition/>
                <RowDefinition Height="68"/>
            </Grid.RowDefinitions>

            <!-- Title bar (drag region) - same color as window -->
            <Border Grid.Row="0" Background="#FF101214" CornerRadius="12,12,0,0">
                <Grid MouseLeftButtonDown="TitleRow_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Choose a display"
                               Margin="14,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="#F0FFFFFF"
                               FontSize="13"/>

                    <Button Grid.Column="1"
                            Content="✕"
                            Width="28" Height="28"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Background="#22FFFFFF"
                            BorderBrush="#33FFFFFF"
                            Foreground="#F0FFFFFF"
                            Padding="0"
                            Click="Close_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="16,14,16,14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Pick a display to place the overlay on"
                           Foreground="#CCFFFFFF"
                           FontWeight="SemiBold"/>

                <Rectangle Grid.Row="1" Height="1" Fill="#21FFFFFF"/>

                <ListBox x:Name="ScreenList" Grid.Row="2" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,6,0,0" Padding="10"
                                    Background="#12191B1D" CornerRadius="10"
                                    BorderBrush="#24FFFFFF" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                                        <TextBlock Text="{Binding Display}" Foreground="#F0FFFFFF" FontSize="13"/>
                                        <TextBlock Text="{Binding Details}" Foreground="#80FFFFFF" FontSize="11"/>
                                    </StackPanel>

                                    <Border Grid.Column="1" Width="88" Height="56" CornerRadius="6" Background="#0EFFFFFF"
                                            BorderBrush="#28FFFFFF" BorderThickness="1">
                                        <Grid>
                                            <Rectangle Fill="#25FFFFFF" Margin="6"/>
                                            <Rectangle Fill="#18FFFFFF" Margin="18,14,18,18"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Buttons (extra padding so nothing gets clipped) -->
            <Grid Grid.Row="2" Margin="16,0,16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Neutral (no blue accent) -->
                <Button Grid.Column="1" Content="Cancel" Width="110" Height="38"
                        Background="#1EFFFFFF" BorderBrush="#30FFFFFF" Foreground="#F0FFFFFF"
                        Click="Cancel_Click"/>
                <Button Grid.Column="3" Content="OK" Width="110" Height="38"
                        Background="#1EFFFFFF" BorderBrush="#30FFFFFF" Foreground="#F0FFFFFF"
                        IsDefault="True"
                        Click="Ok_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
