<UserControl x:Class="SimTools.Controls.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40">
    <Grid Background="{StaticResource Brush.SurfaceAlt}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0" MouseLeftButtonDown="DragWindow">
            <TextBlock Text="SimTools" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="  —  sim racing toolkit" Foreground="{StaticResource Brush.TextDim}" Margin="8,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <Button Width="38" Height="28" Content="–" Click="Minimize"/>
            <Button Width="38" Height="28" Content="□" Click="MaxRestore"/>
            <Button Width="38" Height="28" Content="✕" Background="#D83C3C" Click="Close"/>
        </StackPanel>
    </Grid>
</UserControl>