<Window x:Class="SimTools.Views.InputCaptureDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Background="#00000000" AllowsTransparency="True" ShowInTaskbar="False" Topmost="True"
        Title="Listen for Input" FocusManager.FocusedElement="{Binding ElementName=Root}">
    <Grid x:Name="Root">
        <Border Background="#F015171B" CornerRadius="10" Padding="16"
                BorderBrush="#333840" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Listening for input…" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="Press any key or mouse button. Press Esc to cancel."
                           Foreground="#B9C0CC" Margin="0,6,0,0"/>
                <Border Background="#161A1F" CornerRadius="6" Padding="10" Margin="0,12,0,0">
                    <TextBlock x:Name="Status" Text="Waiting…" Foreground="#B9C0CC"/>
                </Border>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button Content="Cancel" Width="90" Height="30" Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
