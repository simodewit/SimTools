<UserControl x:Class="SimTools.Views.OverlayEditorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:SimTools.Models">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Asphalt background brush -->
            <ImageBrush x:Key="AsphaltBrush"
                    ImageSource="pack://application:,,,/SimTool;component/Images/Asphalt.png"
                    Stretch="UniformToFill"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  CanContentScroll="True">
        <Grid Margin="20" x:Name="Root">
            <!-- All rows are Auto so nothing competes for space -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- header -->
                <RowDefinition Height="Auto"/>
                <!-- preview (fixed size) -->
                <RowDefinition Height="Auto"/>
                <!-- bottom tabs -->
            </Grid.RowDefinitions>

            <!-- Header (unchanged except your subtitle text) -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Overlay Editor" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="Select any tool to see the preview and change the settings to your liking"
                           Foreground="{DynamicResource Brush.TextDim}" Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Preview: fixed 960x540, centered; never scales down, page scrolls instead -->
            <Grid Grid.Row="1">
                <Grid HorizontalAlignment="Center"
                      Width="960" Height="540"
                      ClipToBounds="True"
                      Background="{StaticResource AsphaltBrush}">

                    <!-- Preview canvas + elements -->
                    <Canvas x:Name="PreviewCanvas"
                            AllowDrop="True"
                            Background="#10000000"
                            DragOver="Preview_DragOver"
                            Drop="Preview_Drop">
                        <ItemsControl ItemsSource="{Binding OverlayElements}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#CC0D0F13" CornerRadius="8" Padding="8"
                                            Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}"
                                            MouseLeftButtonDown="Element_MouseLeftButtonDown"
                                            MouseMove="Element_MouseMove"
                                            MouseLeftButtonUp="Element_MouseLeftButtonUp">
                                        <StackPanel>
                                            <TextBlock Text="Mapping" Foreground="{DynamicResource Brush.TextDim}" FontSize="12"/>
                                            <TextBlock Text="{Binding DataContext.State.CurrentMap.Name, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                       FontSize="20" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>

                    <!-- Centered settings panel (already themed darker) -->
                    <Border x:Name="CenteredSettingsPanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="{DynamicResource Brush.OverlayPanel}"
                            BorderBrush="{DynamicResource Brush.OverlayBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12"
                            MinWidth="120" MinHeight="120">
                        <ContentPresenter Content="{Binding SelectedElement}">
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="Select a tool to edit its settings"
                                                   Foreground="{DynamicResource Brush.TextDim}"
                                                   FontStyle="Italic"
                                                   TextAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                    </Border>

                </Grid>
            </Grid>

            <!-- Tools panel (unchanged) -->
            <Border Grid.Row="2" Style="{DynamicResource Card}" Margin="0,12,0,0" Padding="12">
                <TabControl Background="Transparent">
                    <TabItem Header="General" Cursor="Hand">
                        <StackPanel Margin="8">
                            <Button Content="Open Overlay Window"
                                    Command="{Binding OpenOverlay}"
                                    Style="{StaticResource PrimaryButton}"
                                    Width="220"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Keybinds" Cursor="Hand">
                        <StackPanel Margin="8">
                            <!-- keybind content -->
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
