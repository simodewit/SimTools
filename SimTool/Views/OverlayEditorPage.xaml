<UserControl x:Class="SimTools.Views.OverlayEditorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20" x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="*"/>
            <!-- preview -->
            <RowDefinition Height="Auto"/>
            <!-- bottom tabs -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Overlay Editor" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Design your broadcast overlay: add tools below, then drag them onto the 16:9 preview."
                       Foreground="{DynamicResource Brush.TextDim}" Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Centered 16:9 preview -->
        <Grid Grid.Row="1">
            <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                    Width="960" Height="540" CornerRadius="10"
                    Background="{DynamicResource Brush.Surface}">
                <Grid>
                    <!-- Preview canvas for elements -->
                    <Canvas x:Name="PreviewCanvas" AllowDrop="True"
                            Background="#0AFFFFFF"
                            DragOver="Preview_DragOver"
                            Drop="Preview_Drop">
                        <ItemsControl ItemsSource="{Binding OverlayElements}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <!-- Untyped template -->
                                <DataTemplate>
                                    <Border Background="#CC0D0F13" CornerRadius="8" Padding="8"
                                            Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}"
                                            MouseLeftButtonDown="Element_MouseLeftButtonDown"
                                            MouseMove="Element_MouseMove"
                                            MouseLeftButtonUp="Element_MouseLeftButtonUp">
                                        <StackPanel>
                                            <TextBlock Text="Mapping" Foreground="{DynamicResource Brush.TextDim}" FontSize="12"/>
                                            <TextBlock Text="{Binding DataContext.State.CurrentMap.Name, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                       FontSize="20" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom panel with dark-styled tabs -->
        <Border Grid.Row="2" Style="{DynamicResource Card}" Margin="0,12,0,0" Padding="12">
            <TabControl Background="Transparent">
                <!-- Settings tab -->
                <TabItem Header="Settings">
                    <StackPanel Margin="8">
                        <TextBlock Text="Overlay Controls" FontWeight="Bold" Margin="0,0,0,6"/>
                        <Button Content="Open Overlay Window" Command="{Binding OpenOverlay}" Style="{StaticResource PrimaryButton}" Width="220"/>
                        <TextBlock Text="Overlay opens as a transparent window. Use the Tools tab to add components, then drag them in the preview."
                                   Foreground="{DynamicResource Brush.TextDim}" TextWrapping="Wrap" Margin="0,8,0,0"/>
                    </StackPanel>
                </TabItem>

                <!-- Tools tab -->
                <TabItem Header="Tools">
                    <StackPanel Margin="8">
                        <TextBlock Text="Drag a tool into the preview above." Foreground="{DynamicResource Brush.TextDim}" Margin="0,0,0,8"/>
                        <ItemsControl>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource Brush.SurfaceAlt}" BorderBrush="{DynamicResource Brush.Border}"
                                            BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,6,0,0"
                                            PreviewMouseMove="Tool_PreviewMouseMove">
                                        <TextBlock Text="Current Mapping Indicator" Tag="MappingIndicator"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.Items>
                                <ContentPresenter/>
                            </ItemsControl.Items>
                        </ItemsControl>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</UserControl>
