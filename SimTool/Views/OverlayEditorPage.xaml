<UserControl x:Class="SimTools.Views.OverlayEditorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Asphalt background brush -->
            <ImageBrush x:Key="AsphaltBrush"
                    ImageSource="pack://application:,,,/SimTool;component/Images/Asphalt.png"
                    Stretch="UniformToFill"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20" x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="*"/>
            <!-- preview -->
            <RowDefinition Height="Auto"/>
            <!-- bottom tabs -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Overlay Editor" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Click the preview button of any tool and design it to your liking."
                       Foreground="{DynamicResource Brush.TextDim}" Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Centered 16:9 preview -->
        <Grid Grid.Row="1">
            <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Width="960" Height="540" ClipToBounds="True"
          Background="{StaticResource AsphaltBrush}">
                <!-- Preview canvas for elements; faint gray so it’s just barely visible -->
                <Canvas x:Name="PreviewCanvas"
                        AllowDrop="True"
                        Background="#10000000"
                        DragOver="Preview_DragOver"
                        Drop="Preview_Drop">
                    <ItemsControl ItemsSource="{Binding OverlayElements}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#CC0D0F13" CornerRadius="8" Padding="8"
                                Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}"
                                MouseLeftButtonDown="Element_MouseLeftButtonDown"
                                MouseMove="Element_MouseMove"
                                MouseLeftButtonUp="Element_MouseLeftButtonUp">
                                    <StackPanel>
                                        <TextBlock Text="Mapping" Foreground="{DynamicResource Brush.TextDim}" FontSize="12"/>
                                        <TextBlock Text="{Binding DataContext.State.CurrentMap.Name, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           FontSize="20" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </Grid>
        </Grid>

        <!-- Tools panel -->
        <Border Grid.Row="2" Style="{DynamicResource Card}" Margin="0,12,0,0" Padding="12">
            <TabControl Background="Transparent">

                <TabItem Header="General" Cursor="Hand">
                    <StackPanel Margin="8">
                        <Button Content="Open Overlay Window" Command="{Binding OpenOverlay}" Style="{StaticResource PrimaryButton}" Width="220" Cursor="Hand"/>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Keybinds" Cursor="Hand">
                    <StackPanel Margin="8">
                        <!-- keybind content -->
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</UserControl>
