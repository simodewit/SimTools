<UserControl x:Class="SimTools.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Group the news by Category -->
            <CollectionViewSource x:Key="newsByCategory" Source="{Binding News}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription PropertyName="Category"/>
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel Margin="20">
            <Border Style="{DynamicResource Card}" Margin="0,0,0,14">
                <StackPanel>
                    <TextBlock Text="Welcome to SimTools" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Tune your wheel, map your keys, and craft overlays."
                               Foreground="{DynamicResource Brush.TextDim}"/>
                </StackPanel>
            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Grouped Live News -->
                <Border Style="{DynamicResource Card}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Live Motorsport News" FontWeight="Bold" FontSize="16" Margin="0,0,0,6"/>

                        <ItemsControl ItemsSource="{Binding Source={StaticResource newsByCategory}}">
                            <ItemsControl.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Margin="0,10,0,4"/>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ItemsControl.GroupStyle>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- subtle article background + border -->
                                    <Border Margin="0,6" Background="{DynamicResource Brush.SurfaceAlt}"
                                            BorderBrush="{DynamicResource Brush.Border}" BorderThickness="1"
                                            CornerRadius="8" Padding="10">
                                        <StackPanel>
                                            <TextBlock TextWrapping="Wrap" FontWeight="SemiBold">
                                                <Hyperlink NavigateUri="{Binding Link}" RequestNavigate="NewsLink_RequestNavigate">
                                                    <Run Text="{Binding Title}"/>
                                                </Hyperlink>
                                            </TextBlock>
                                            <TextBlock Foreground="{DynamicResource Brush.TextDim}" FontSize="12"
                                                       Text="{Binding PubDate, StringFormat={}{0:dd MMM yyyy}}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Quick Tips -->
                <Border Grid.Column="1" Style="{DynamicResource Card}" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Quick Tips" FontWeight="Bold" FontSize="16"/>
                        <StackPanel Margin="0,6,0,0">
                            <TextBlock Foreground="{DynamicResource Brush.TextDim}" Text="• Create multiple profiles for each sim or car to switch quickly."/>
                            <TextBlock Foreground="{DynamicResource Brush.TextDim}" Text="• Use 'Maps' to separate race, quali, and practice bindings."/>
                            <TextBlock Foreground="{DynamicResource Brush.TextDim}" Text="• Assign 'Next/Previous Map' hotkeys to change mappings mid-race."/>
                            <TextBlock Foreground="{DynamicResource Brush.TextDim}" Text="• Drag the 'Mapping Indicator' onto the overlay so viewers see your current map."/>
                            <TextBlock Foreground="{DynamicResource Brush.TextDim}" Text="• Double-click names to rename profiles, maps, and actions."/>
                        </StackPanel>
                        <Image Source="pack://application:,,,/Assets/hero_motorsport.jpg"
                               Height="160" Stretch="UniformToFill" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
