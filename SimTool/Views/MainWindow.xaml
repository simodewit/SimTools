<Window x:Class="SimTools.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SimTools.Controls"
        xmlns:vm="clr-namespace:SimTools.ViewModels"
        Title="SimTools" Height="720" Width="1200"
        WindowStyle="None" ResizeMode="CanResizeWithGrip" AllowsTransparency="False">
    <!-- Local merge so styles/brushes resolve reliably -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <controls:TitleBar Grid.Row="0" Grid.ColumnSpan="2"/>
        <controls:SideNav Grid.Row="1" Grid.Column="0"/>

        <Border Grid.Row="1" Grid.Column="1" Background="{DynamicResource Brush.Background}">
            <ContentPresenter Content="{Binding CurrentPage}"/>
        </Border>

        <!-- thin border for a crisp edge -->
        <Border BorderBrush="{DynamicResource Brush.Border}" BorderThickness="1"/>
    </Grid>
</Window>
